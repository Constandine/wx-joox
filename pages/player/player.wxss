.player{
   display: flex;
   flex-direction: column;
   align-items: center;
   height: 100%;
   /*justify-content:space-between;*/
}

.player #bg{
    width : 100%;
    height: 100%;
    position: absolute;
    z-index: -1;
    -webkit-filter : blur(100px); /* Chrome, Opera */
       -moz-filter : blur(100px);
        -ms-filter : blur(100px);    
            filter : blur(100px);        
}
.player #title{
    font-size: 50rpx;
    margin-top: 80rpx;
    max-width: 500rpx;
    height: 80rpx;
    overflow: hidden;
    text-overflow : ellipsis;
    white-space: nowrap;
}
.player #author{
    margin-top: 10rpx;
    font-size: 30rpx;
    color: rgba(205,205,205,0.5);
}
.player #cover{
    margin-top: 50rpx;
    display: block;
    width: 500rpx;
    height: 500rpx;
    border-radius: 300rpx;
    border : rgba(155,155,155,0.3) 5px solid;
}

.player #btns{
    margin-top: 100rpx;
    width : 70%;
    height : 200rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.player #playBtn{
    width: 150rpx;
    height: 150rpx;
}
.player #preBtn, #nextBtn{
    width: 100rpx;
    height: 100rpx;
}
.shift{
    padding-left: 7rpx;
}